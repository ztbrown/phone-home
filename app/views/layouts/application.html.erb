<!DOCTYPE html>
<html>
    <head>
        <title>PhoneHome</title>
        <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
        <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
        <%= csrf_meta_tags %>
    </head>
    <body>
        <%= render "layouts/navigation" %>

        <div class="container">
            <% unless flash.empty? %>
                <%= render "layouts/messages" %>
            <% end %>

            <%= yield %>
        </div>
    </body>
</html>
